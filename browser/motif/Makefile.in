SHELL=/bin/sh
VPATH=@srcdir@

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@
appdefdir=$(libdir)/X11/app-defaults

CPP=@CPP@
CC=@CC@
PURIFY=
LD=${PURIFY} ${CC}
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@ @X_CFLAGS@ @MOTIF_CFLAGS@ -I@top_srcdir@/include
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=$(LOCAL_LIBS) @HESIOD_LIBS@ @MOTIF_LIBS@ -lWc -lMu -lXm \
  @X_LIBS@ -lXt @X_PRE_LIBS@ -lX11 @X_EXTRA_LIBS@ @LIBS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${DEFS}

PARSERLIB=${top_srcdir}/clients/parser/libparser.a
TTYLIB=${top_srcdir}/clients/tty/libtty.a
CLIENTLIB=${top_srcdir}/clients/lib/libclient.a
COMMONLIB=${top_srcdir}/common/libcommon.a
CONFIGLIB=${top_srcdir}/cfgfile/libcfgfile.a
LOGGERLIB=${top_srcdir}/logger/liblogger.a
LOCAL_LIBS=$(LOGGERLIB)

SRCS=main.c callbacks.c MriRegAll.c
OBJS=main.o callbacks.o MriRegAll.o

all: xbrowser

xbrowser: $(OBJS)
	${LD} ${LDFLAGS} $(OBJS) ${LIBS} -o $@

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${INSTALL_PROGRAM} xbrowser ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${appdefdir}
	${INSTALL} Xbrowser ${DESTDIR}${appdefdir}

clean:
	rm -f $(OBJS) xbrowser

distclean: clean
	rm -f Makefile

depend.in: Makefile.in
	makedepend -f Makefile.in ${CPPFLAGS} ${DEFS} *.[ch]
