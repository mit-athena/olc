 * $Source: /afs/dev.mit.edu/source/repository/athena/bin/olc/server/olcm/Imakefile,v $
 * $Id: Imakefile,v 1.2 1991-04-10 14:57:36 lwvanels Exp $
 */

/*#define Profiling*/

#ifdef Profiling
LIBSUFFIX=_p
EXTRA_LOAD_FLAGS=-pg
#endif

SRCS=	olcm.c
OBJS=	olcm.o

#ifdef Profiling
DEFINES=-DPROFILE
.c.o:
	$(CC) -pg -c $(CFLAGS) $*.c
#else
DEFINES=
#endif /* Profiling */

SYS_LIBRARIES=  $(KerberosLib)

NormalProgramTarget(olcm,$(OBJS),,,$(SYS_LIBRARIES))

SaberProgramTarget(olcm,$(SRCS),$(OBJS),,$(SYS_LIBRARIES))

#ifdef InstallAltLoc
InstallProgram(olcm,/mit/olcdev/@sys)
#else
InstallProgram(olcm,$(DESTDIR)/usr/etc)
#endif

DependTarget()
LintTarget()

AllTarget(olcm)
