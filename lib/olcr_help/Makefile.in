SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
datadir=@datadir@

.SUFFIXES: .nroff .help

OLCR_HELP_DIR=${libdir}/olc/olcr_help
OLCR_HELP_FILES=acl.help answers.help ask.help cancel.help \
  comment.help describe.help done.help forward.help grab.help help.help \
  instance.help list.help mail.help motd.help off.help olcr.help on.help \
  qmark.help quit.help replay.help send.help show.help status.help \
  stock.help topic.help who.help hours.help version.help zephyr.help

all: $(OLCR_HELP_FILES)

.nroff.help:
	nroff -man $*.nroff > $@

clean distclean:
	rm -f *.help *~

install: $(OLCR_HELP_FILES)
	${top_srcdir}/mkinstalldirs ${DESTDIR}${OLCR_HELP_DIR}
	for i in $(OLCR_HELP_FILES); do \
	    ${INSTALL} -m 444 $$i ${DESTDIR}${OLCR_HELP_DIR}; done

depend.in:
