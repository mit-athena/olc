SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
datadir=@datadir@

.SUFFIXES: .nroff .help

OLC_HELP_DIR=${libdir}/olc/olc_help
OLC_HELP_FILES=answers.help ask.help cancel.help done.help help.help \
  motd.help olc.help qmark.help quit.help replay.help send.help show.help \
  status.help topic.help who.help hours.help version.help

all: $(OLC_HELP_FILES)

.nroff.help:
	nroff -man $*.nroff > $@

clean distclean:
	rm -f *.help *~

install: $(OLC_HELP_FILES)
	${top_srcdir}/mkinstalldirs ${DESTDIR}${OLC_HELP_DIR}
	for i in $(OLC_HELP_FILES); do \
	    ${INSTALL} -m 444 $$i ${DESTDIR}${OLC_HELP_DIR}; done

depend.in:
