SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
datadir=@datadir@

SUBDIRS=olc_help olcr_help @SUBDIR_MOTIF_HELP@
CFGDIR=${libdir}/olc
CFGFILES=olc.cfg olcr.cfg xolc.cfg olc_browser.cfg

default: all

all clean distclean depend.in:
	for i in ${SUBDIRS}; do (cd $$i; ${MAKE} ${MFLAGS} $@) || exit 1; done

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${CFGDIR}
	for i in $(CFGFILES); do \
	    ${INSTALL} -m 444 ${srcdir}/$$i ${DESTDIR}${CFGDIR}; done
	for i in ${SUBDIRS}; do (cd $$i; ${MAKE} ${MFLAGS} $@) || exit 1; done
